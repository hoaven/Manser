/*
 * Base structure
 */

/* Move down content because we have a fixed navbar that is 50px tall */
body {
    padding-top: 40px;
}


/*
 * Global add-ons
 */

.sub-header {
    padding-bottom: 10px;
    border-bottom: 1px solid #eee;
}

/*
 * Top navigation
 * Hide default border to remove 1px line.
 */
.navbar-fixed-top {
    border: 0;
}

/*
 * Sidebar
 */

/* Hide for mobile, show later */
.sidebar {
    display: none;
}
@media (min-width: 468px) {
    .sidebar {
        position: fixed;
        top: 51px;
        bottom: 0;
        left: 0;
        z-index: 1000;
        display: block;
        padding: 10px;
        overflow-x: hidden;
        overflow-y: auto; /* Scrollable contents if viewport is shorter than content. */
        border-right: 4px solid #eee;
        padding-left: 0;
        border-color: #428bca;  
    }}

/* Sidebar navigation */
.nav-sidebar {
    margin-right: 5px; /* 20px padding + 1px border */
    margin-left: 20px; 
    margin-bottom: 5px;		
    text-align: center;
    font-weight: bold;   
}
.nav-siderbar > li {
    float: none;
    background-color: #428bca;
}
.nav-siderbar > li > a {
    padding-right: -20px;
    padding-left: 20px; 
    float: none;
}
.nav-siderbar > li + li {
    margin-top: 4px;
    margin-left: 0;
}

.nav-sidebar > li > a:hover,
.nav-sidebar > li > a:focus {
    color: #fff;
    background-color: #428bca;
    border-radius: 4px;
    border-bottom: 4px solid #eee;
}


/*
 * Main content
 */

.main {
    padding: 20px;
}
@media (min-width: 768px) {
    .main {
        padding-right: 40px;
        padding-left: 40px;
    }
}
.main .page-header {
    margin-top: 0;
}


/*
 * Placeholder dashboard ideas
 */

.placeholders {
    margin-bottom: 30px;
    text-align: center;
}
.placeholders h4 {
    margin-bottom: 0;
}
.placeholder {
    margin-bottom: 20px;
}
.placeholder img {
    display: inline-block;
    border-radius: 50%;
}